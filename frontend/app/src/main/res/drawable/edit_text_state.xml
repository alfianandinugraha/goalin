<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="@android:integer/config_shortAnimTime"
    android:exitFadeDuration="@android:integer/config_longAnimTime">
    <item android:state_enabled="false">
        <inset
            android:insetTop="-1dp"
            android:insetLeft="-1dp"
            android:insetRight="-1dp">
            <shape android:shape="rectangle">
                <solid android:color="@color/gray_200" />
                <stroke android:color="@color/gray_900" android:width="1dp" />
            </shape>
        </inset>
    </item>
    <item android:state_focused="true">
        <inset
            android:insetTop="-1dp"
            android:insetLeft="-1dp"
            android:insetRight="-1dp">
            <shape android:shape="rectangle">
                <stroke android:color="@color/green_500" android:width="1dp" />
            </shape>
        </inset>
    </item>
    <item>
        <inset
            android:insetTop="-1dp"
            android:insetLeft="-1dp"
            android:insetRight="-1dp">
            <shape android:shape="rectangle">
                <padding
                    android:bottom="9dp"
                    android:left="9dp"
                    android:right="9dp"
                    android:top="9dp"/>
                <stroke android:color="@color/gray_500" android:width="1dp" />
            </shape>
        </inset>
    </item>
</selector>