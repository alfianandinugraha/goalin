<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddGoalActivity"
    android:paddingTop="37dp"
    android:paddingHorizontal="20dp"
    android:orientation="vertical">
    <com.example.goalin.views.BackView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Tambah Goal mu"
        style="@style/style_sub_title"/>
    <com.example.goalin.views.EditTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama Barang"
        android:layout_marginBottom="30dp" />
    <com.example.goalin.views.EditTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Harga Barang"
        android:inputType="numberDecimal"
        android:layout_marginBottom="30dp"/>
    <com.example.goalin.views.SelectView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/category_select"
        android:hint="Pilih Kategori" />
    <com.example.goalin.views.ButtonView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tambah Goal"
        android:id="@+id/add_btn"
        android:layout_marginTop="40dp" />
</LinearLayout>