<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddGoalActivity"
    android:paddingTop="37dp"
    android:paddingHorizontal="20dp"
    android:orientation="vertical">
    <com.example.goalin.ui.BackView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Edit Goal"
        style="@style/style_sub_title"/>
    <com.example.goalin.ui.EditTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama Barang"
        android:text="Laptop"
        android:layout_marginBottom="20dp" />
    <com.example.goalin.ui.EditTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Harga Barang"
        android:text="1200000"
        android:inputType="numberDecimal"
        android:layout_marginBottom="20dp"/>
    <com.example.goalin.ui.EditTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Pilih Kategori Barang"
        android:text="Elektronik" />
    <com.example.goalin.ui.ButtonView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Simpan Goal"
        android:layout_marginTop="40dp"
        android:id="@+id/save_btn"/>
</LinearLayout>