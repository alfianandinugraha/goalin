<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="@android:integer/config_shortAnimTime"
    android:exitFadeDuration="@android:integer/config_longAnimTime" >
    <item android:state_focused="true" android:state_pressed="false">
        <layer-list>
            <item>
                <inset
                    android:insetTop="-1dp"
                    android:insetLeft="-1dp"
                    android:insetRight="-1dp">
                    <shape android:shape="rectangle">
                        <padding
                            android:bottom="9dp"
                            android:left="9dp"
                            android:right="9dp"/>
                        <stroke android:color="@color/green_500" android:width="1dp" />
                    </shape>
                </inset>
            </item>
            <item android:gravity="center|end" android:drawable="@drawable/ic_baseline_arrow_drop_down_black">
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <inset
                    android:insetTop="-1dp"
                    android:insetLeft="-1dp"
                    android:insetRight="-1dp">
                    <shape android:shape="rectangle">
                        <padding
                            android:bottom="9dp"
                            android:left="9dp"
                            android:right="9dp"/>
                        <stroke android:color="#DADADA" android:width="1dp" />
                    </shape>
                </inset>
            </item>
            <item android:gravity="center|end" android:drawable="@drawable/ic_baseline_arrow_drop_down_black">
            </item>
        </layer-list>
    </item>
</selector>