<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddGoalActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="37dp"
        android:paddingHorizontal="20dp"
        android:orientation="vertical">

        <com.example.goalin.ui.BackView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Edit Goal"
            style="@style/style_sub_title"/>
        <com.example.goalin.ui.EditTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Barang"
            android:text="Laptop"
            android:id="@+id/name"
            android:layout_marginBottom="20dp" />
        <com.example.goalin.ui.EditTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Harga Barang"
            android:text="1200000"
            android:id="@+id/total"
            android:inputType="numberDecimal"
            android:layout_marginBottom="20dp"/>
        <com.example.goalin.ui.EditTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Catatan"
            android:id="@+id/notes"
            android:layout_marginBottom="20dp"/>
        <com.example.goalin.ui.SelectView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/category_select"
            android:hint="Pilih Kategori" />
        <com.example.goalin.ui.ButtonView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simpan Goal"
            android:layout_marginTop="40dp"
            android:id="@+id/save_btn"/>
    </LinearLayout>
    <com.example.goalin.ui.FloatingProgressView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/floating_progress"
        android:visibility="gone"/>
</RelativeLayout>